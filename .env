# 要求仕様ID: PLT.1-ENV.1 - 環境変数設定

# データベース設定
DATABASE_URL="postgresql://skill_user:skill_password@localhost:5433/skill_report_db"

# Next.js設定
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# JWT設定
JWT_SECRET="your-jwt-secret-key-here"

# 暗号化設定
ENCRYPTION_KEY="your-32-character-encryption-key"

# メール設定（通知機能用）
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"
SMTP_FROM="noreply@example.com"

# 外部API設定
# 人事システム連携
HR_SYSTEM_API_URL="https://hr-api.example.com"
HR_SYSTEM_API_KEY="your-hr-api-key"

# SSO設定
SSO_PROVIDER_URL="https://sso.example.com"
SSO_CLIENT_ID="your-sso-client-id"
SSO_CLIENT_SECRET="your-sso-client-secret"

# ファイルアップロード設定
UPLOAD_MAX_SIZE="10485760" # 10MB
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,application/pdf,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"

# ログ設定
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"

# セキュリティ設定
BCRYPT_ROUNDS="12"
SESSION_TIMEOUT="3600" # 1時間（秒）

# 開発環境設定
NODE_ENV="development"
PORT="3000"

# 本番環境設定（本番時のみ）
# VERCEL_URL="your-vercel-app-url"
# REDIS_URL="redis://localhost:6379"

# 監視・分析設定
# SENTRY_DSN="your-sentry-dsn"
# GOOGLE_ANALYTICS_ID="your-ga-id"

# バックアップ設定
BACKUP_SCHEDULE="0 2 * * *" # 毎日午前2時
BACKUP_RETENTION_DAYS="30"
